Config { font = "xft:Sauce Code Pro:size=9"
        , borderColor = "black"
        , border = BottomB
        , bgColor = "black"
        , fgColor = "grey"
        , position = TopW L 100
        , persistent = True
        , sepChar = "%"
        , alignSep = "}{"
        , template = "%StdinReader% | %multicpu% | %memory% | %eth0% %wlan0% }{ <fc=#ee9a00>%date%</fc> | %uname% | %KNYC% "
        , commands =
              [ Run Weather "KNYC"          [ "-t", "<skyCondition> | <fc=#4682B4><tempF></fc>Â°F | <fc=#4682B4><rh></fc>%" ] 36000
              , Run Network "eth0"           ["-L","0","-H","32","--normal","green","--high","red"] 10
              , Run Network "wlan0"          ["-L","0","-H","32","--normal","green","--high","red"] 10
              , Run MultiCpu                 [ "-t", "<total0>%|<total1>%|<total2>%|<total3>%"
                                             , "-L","3","-H","50","--normal","green","--high","red"
                                             ] 10
              , Run Memory                   ["-t","Mem: <usedratio>%"] 10
              , Run Com "uname"              ["-s","-r"] "" 36000
              , Run Date                     "%a %b %_d %Y %H:%M:%S" "date" 10
              , Run StdinReader
              ]
        }
